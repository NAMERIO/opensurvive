{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src"]
    },
    "include": [
        "api",
        "src",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
